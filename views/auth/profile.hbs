<section class="profile-section" style="background-color: #3B2967;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-4">

        <div class="card" style="border-radius: 15px;">
          <div class="card-body text-center">
            <div class="mt-3 mb-4">
              <img
                src="{{currentUser.picture_url}}"
                class="img-fluid"
                style="width: 300px;"
              />
            </div>
            <div>
              <h4 class="mb-2">Welcome {{currentUser.username}}!</h4>
              <h6>Edit your profile</h6>
              <form
                action="/profile/{{currentUser._id}}/edit"
                method="post"
                enctype="multipart/form-data"
              >
                <label>
                  Username
                  <input
                    type="text"
                    name="username"
                    value="{{currentUser.username}}"
                  />
                </label>
                <br />
                <label>
                  Profile picture
                  <input type="file" name="picture_url" />
                </label>
                <br />
                <button type="submit">Edit</button>
              </form>
            </div>
            <br />
            <a href="/favorites" class="btn btn-primary btn-rounded btn-lg">
              Favorites
            </a>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>