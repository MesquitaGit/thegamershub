<section class="profile-section">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-4">

        <div class="card profile-card" style="border-radius: 15px;">
          <div class="card-body text-center">
            <div class="mt-3 mb-4">
              <img
                src="{{currentUser.picture_url}}"
                class="img-fluid"
                style="width: 300px;"
              />
            </div>
            <div>
              <h4 class="mb-2">Welcome {{currentUser.username}}!</h4>
              <br />
              <form
                action="/profile/{{currentUser._id}}/edit"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="inputContainer">
                  <input
                    type="text"
                    class="input"
                    name="username"
                    value="{{currentUser.username}}"
                  />
                  <label class="label">
                    Username
                  </label>
                </div>

                <br />
                <div class="inputContainer">
                  <label class="label">
                    Profile picture
                  </label>
                  <input type="file" name="picture_url" />
                </div>

                <br />
                <button class="btn general-btn" type="submit">Edit your profile</button>
              </form>
            </div>
            <br />
            <a href="/favorites" class="btn general-btn">
              List of Favorites
            </a>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>